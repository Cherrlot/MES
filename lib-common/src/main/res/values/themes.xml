<resources >
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- Toolbar 样式 -->
    <style name="app_toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/app_textPrimary</item>
        <!-- 字体大小 -->
        <item name="android:textSize">@dimen/DIMEN_14SP</item>
        <!--ToolBar 字体颜色 -->
        <item name="titleTextColor">@color/app_textPrimary</item>
        <!-- 溢出菜单图标颜色 -->
        <item name="colorControlNormal">@color/app_tintPrimary</item>
        <!-- 右侧溢出菜单图标自定义 -->
        <!--        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>-->
        <!-- 是否覆盖锚点，默认为true，即盖住 Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">@color/app_backgroundPrimary</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/app_textNormal</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="app_toolbar_port" parent="@style/app_toolbar">
        <item name="actionMenuTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="actionMenuTextColor">@color/app_black</item>
        <item name="android:textSize">@dimen/DIMEN_18SP</item>
        <!--ToolBar 字体颜色 -->
        <item name="titleTextColor">@color/app_black</item>
    </style>

    <style name="app_toolbar_port_red" parent="@style/app_toolbar">
        <item name="actionMenuTextColor">@color/color_E12626</item>
        <item name="titleTextColor">@color/app_black</item>
    </style>

    <style name="app_toolbar_port_white" parent="@style/app_toolbar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="backgroundColor">@color/color_457AFF</item>
    </style>

    <style name="app_toolbar_port_green" parent="@style/app_toolbar">
        <item name="actionMenuTextColor">@color/app_green</item>
        <item name="titleTextColor">@color/app_black</item>
    </style>

    <style name="tabTextStyle">
        <item name="android:textSize">@dimen/DIMEN_18SP</item>
    </style>
    <!-- 分隔线样式 -->
    <style name="app_dividing">
        <item name="android:background">@color/app_colorDivider</item>
    </style>

    <style name="app_dividing.vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="app_dividing.horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <!-- 进度条弹窗主题 -->
    <style name="app_progress_dialog" parent="android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 圆形图片 -->
    <style name="app_image_circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- 弹窗默认主题 -->
    <style name="BaseDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- 是否显示title -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否是全屏 -->
        <item name="android:windowFullscreen">false</item>
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 点击空白是否消失 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- 基本主题 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- 应用主色调，ActionBar 等默认颜色 -->
        <item name="colorPrimary">@color/app_colorPrimary</item>
        <!-- 应用主要暗色调，StatusBar 默认颜色 -->
        <item name="colorPrimaryDark">@color/app_colorPrimaryDark</item>
        <!-- 应用中控件选中默认色调 -->
        <item name="colorAccent">@color/app_colorAccent</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@color/app_backgroundWindow</item>

        <!-- 动画相关 -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>
    <style name="AppCompatCaptureTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">#ffb341</item>
        <item name="colorPrimaryDark">#ffb341</item>
        <item name="colorAccent">#ffb341</item>
    </style>
    <style name="AppTheme.TextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- 欢迎界面主题 -->
    <style name="Splash" parent="AppTheme">
        <!-- 应用主色调，ActionBar 等默认颜色 -->
        <item name="colorPrimary">@color/app_white</item>
        <!-- 应用主要暗色调，StatusBar 默认颜色 -->
        <item name="colorPrimaryDark">@color/app_white</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@drawable/app_layer_list_splash_bg</item>
    </style>

    <style name="ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 应用主色调，ActionBar 等默认颜色 -->
        <item name="colorPrimary">@color/app_colorPrimary</item>
        <!-- 应用主要暗色调，StatusBar 默认颜色 -->
        <item name="colorPrimaryDark">@color/app_colorPrimaryDark</item>
        <!-- 应用中控件选中默认色调 -->
        <item name="colorAccent">@color/app_colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- 应用的主要暗色调，状态栏默认使用该颜色 -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <!--colorPrimary、colorPrimaryVariant、colorOnPrimary 联合控制状态栏颜色 -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/color666666</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/colorF8F8F8</item>
        <item name="android:textAllCaps">false</item>
        <!-- Customize your theme here. -->

        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowActionBar">false</item>//无ActionBar
        <item name="android:windowFullscreen">true</item>//全屏即无通知栏
        <item name="android:windowContentOverlay">@null</item>//是否有遮盖
    </style>

    <style name="Theme.Launcher" parent="Theme.App">
        <item name="android:windowBackground">@drawable/splash_welcome</item>
        <!--        <item name="android:windowAnimationStyle">@style/anim_fade</item>-->
