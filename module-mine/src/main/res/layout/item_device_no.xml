<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bean"
            type="com.zhizhunbao.lib.common.bean.MachineBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mClDeviceNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/DIMEN_10DP"
        android:layout_marginVertical="@dimen/DIMEN_10DP"
        android:background="@drawable/shape_white_r8_bg"
        android:foreground="@drawable/ripple_foreground_radius_8"
        android:elevation="@dimen/DIMEN_10DP"
        android:minHeight="@dimen/DIMEN_50DP"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/text_33_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/DIMEN_10DP"
            android:text="@{bean.No}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
